<Window x:Class="Sp1sok_del.PassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sp1sok_del"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Окно ввода пароля" Height="210" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FFECB3">
        <StackPanel>
            <TextBlock Margin="0,10" FontSize="24" HorizontalAlignment="Center">Введите пароль для заметки</TextBlock>
            <PasswordBox x:Name="pw1" Margin="30,20,30,10" FontSize="25" MaxLength="20"></PasswordBox>
            <Button Margin="0,0,5,10" Height="40" HorizontalAlignment="Right" Click="Button_Click" VerticalAlignment="Bottom" Width="100">
                <materialDesign:PackIcon VerticalAlignment="Center" HorizontalAlignment="Center" Kind="CheckBold" Foreground="White" Height="35" Width="35"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
